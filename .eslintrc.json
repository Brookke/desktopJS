{
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
        "project": "./tsconfig.json" 
    },
    "rules": {
      "@typescript-eslint/no-inferrable-types": [true, { "ignoreProperties": true, "ignoreParameters": true}]
    }
    
}
